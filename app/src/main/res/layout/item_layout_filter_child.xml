<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:orientation="vertical">

    <LinearLayout
            android:id="@+id/linFilterChild"
            android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <LinearLayout
                android:id="@+id/linCheckbox"
                android:layout_width="wrap_content"
                      android:gravity="center"
                      android:layout_marginStart="10dp"
                      android:layout_gravity="center" android:layout_height="wrap_content">
            <ImageView
                    android:visibility="gone"
                    android:tint="@android:color/holo_blue_light"
                    android:layout_width="20dp"
                    android:src="@drawable/ic_check"
                    android:layout_height="20dp"/>
            <CheckBox
                    android:clickable="false"
                    android:id="@+id/filterCheckBox"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:gravity="left"
                    android:buttonTint="@color/blue_dark"
                    android:button="@drawable/filter_check_uncheck"
            />
        </LinearLayout>
        <TextView

                android:id="@+id/childDetailItem"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text=""
                android:fontFamily="@font/assistantregular"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        <TextView
                android:visibility="gone"
                android:id="@+id/childDetailItemId"
                android:textColor="@color/white"
                android:layout_width="50dp"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
        />
    </LinearLayout>
</RelativeLayout>
