<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:background="@color/white"
        tools:context=".ui.navDrawer.dishDescription.DishDescriptionActivity">


    <!--<ScrollView android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->
    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:orientation="vertical">-->

    <!--upperpart-->
    <LinearLayout
            android:layout_weight="5"
            android:weightSum="5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
        <!--toolbar-->
        <FrameLayout
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">


            <ImageView
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_foodex"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"/>
            <View
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha=".3"
                    android:background="@color/white"/>
            <LinearLayout
                    android:id="@+id/linDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_shape"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:orientation="vertical"
            >

                <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:text="13-05-2019"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                />
                <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="20:58"
                        android:textColor="@color/white"

                        android:textSize="18sp"

                        android:layout_height="wrap_content"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <TextView

                        android:layout_width="wrap_content"
                        android:text="Restaurant Name"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                />
                <TextView android:layout_width="wrap_content"
                          android:layout_gravity="center"
                          android:textColor="@color/black"
                          android:textSize="16sp"
                          android:layout_marginTop="10dp"
                          android:text="Biezer Pizza Test Address"
                          android:layout_height="wrap_content"
                />

                <LinearLayout android:layout_width="match_parent"
                              android:layout_marginTop="10dp"
                              android:orientation="horizontal"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:gravity="center">

                    <com.willy.ratingbar.ScaleRatingBar
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/simpleRatingBar"
                            android:layout_marginStart="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:srb_rating="2"
                            android:gravity="center"
                            app:srb_starPadding="3dp"
                            app:srb_starWidth="20dp"
                            app:srb_starHeight="20dp"
                            app:srb_stepSize="1"
                            app:srb_isIndicator="false"
                            app:srb_clickable="false"
                            app:srb_scrollable="false"
                            app:srb_clearRatingEnabled="false"
                            app:srb_drawableEmpty="@drawable/ic_empty_star"
                            app:srb_drawableFilled="@drawable/ic_filled_star">
                    </com.willy.ratingbar.ScaleRatingBar>

                </LinearLayout>

            </LinearLayout>
            <TextView
                    android:id="@+id/tvSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:gravity="end|top"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="end|top"
                    android:text="Settings"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

            <TextView
                    android:id="@+id/tvBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="start|top"
                    android:text="Back"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
        </FrameLayout>

    </LinearLayout>

    <!--tablayout-->
    <LinearLayout
            android:orientation="vertical"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center|top"
                        android:orientation="vertical"
                        android:paddingLeft="16dp"
                        android:paddingTop="5dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="5dp"
                        tools:ignore="MissingConstraints">

                    <!--"tabMinWidth" is used to increase the width of indivisual tabs-->

                    <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tabLayoutInvitationActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            app:tabMinWidth="100dp"
                            android:background="@drawable/tab_layout_background"
                            app:tabBackground="@drawable/tab_layout_selector"
                            app:tabGravity="center"
                            app:tabIndicatorHeight="0dp"
                            app:tabMode="fixed"
                            app:tabRippleColor="@null"
                            app:tabSelectedTextColor="@color/white"
                            app:tabTextAppearance="@style/TabTextAppearance"

                    />
                </LinearLayout>

                <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewPagerInvitationActivity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                />


            </LinearLayout>
            <!--two options-->
            <LinearLayout
                    android:layout_marginStart="60dp"
                    android:layout_marginEnd="60dp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="bottom"
                    android:layout_height="match_parent">
                <LinearLayout android:layout_width="0dp"
                              android:layout_weight="1"
                              android:gravity="center"
                              android:layout_height="55dp">
                    <ImageView

                            android:id="@+id/imgInviationAdd"
                            android:layout_width="55dp" android:layout_height="55dp"
                            android:src="@drawable/ic_invitation_add"
                    />
                </LinearLayout>
                <LinearLayout android:layout_width="0dp"
                              android:layout_weight="1"
                              android:gravity="center"
                              android:layout_height="55dp">
                    <ImageView
                            android:id="@+id/imgInvitaionSend"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@drawable/ic_invitation_send"
                    />
                </LinearLayout>


            </LinearLayout>
        </FrameLayout>
    </LinearLayout>


    <!--</LinearLayout>-->
    <!--</ScrollView>-->
</LinearLayout>