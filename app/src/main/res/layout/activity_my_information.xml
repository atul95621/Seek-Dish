<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
>

    <!--toolbar-->
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="48dp"
                 android:gravity="center"
                 android:background="@color/colorPrimary"
                 android:orientation="horizontal">

        <TextView
                android:id="@+id/tvSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="end"
                android:layout_gravity="end|center_vertical"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:text="My Informations"
                  android:textColor="@color/white"
                  android:textSize="20sp"/>

        <TextView
                android:id="@+id/tvBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="10dp"
                android:layout_gravity="start|center_vertical"
                android:text="Back"
                android:textColor="@color/white"
                android:textSize="18sp"/>
    </FrameLayout>


    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <!--//parent layout-->
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/imgProfile"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="20dp"
                        android:src="@drawable/ic_user"
                        app:civ_border_color="#ffffff"
                        app:civ_border_width="6dp"/>
            </LinearLayout>


            <!--first name and last name-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:weightSum="2">
                <EditText
                        android:id="@+id/edtName" android:layout_width="0dp"
                        android:inputType="text"
                        android:layout_height="match_parent"
                        android:hint="First Name"
                        android:textColor="@color/black"
                        android:paddingStart="8dp" android:background="@color/edt_light_gray"
                        android:layout_weight=".99"/>
                <View android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="0.02"/>
                <EditText
                        android:id="@+id/edtLastName"
                        android:layout_width="0dp"
                        android:inputType="text"
                        android:paddingStart="8dp"
                        android:textColor="@color/black"
                        android:layout_height="match_parent"
                        android:hint="Last Name"
                        android:background="@color/edt_light_gray"
                        android:layout_weight="0.99"/>
            </LinearLayout>
            <!--username-->
            <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:weightSum="2">
                <EditText
                        android:id="@+id/edtUsername"
                        android:layout_width="0dp"
                        android:inputType="text"
                        android:layout_height="match_parent"
                        android:hint="Username"
                        android:textColor="@color/black"
                        android:paddingStart="8dp" android:background="@color/edt_light_gray"
                        android:layout_weight="2"/>

            </LinearLayout>

            <!--gender-->
            <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:weightSum="2">
                <Spinner
                        android:id="@+id/spinnerGender"
                        android:layout_width="0dp"
                        android:inputType="text"
                        android:layout_height="match_parent"
                        android:hint="Gender"
                        android:textColor="@color/black"
                        android:paddingStart="8dp" android:background="@color/edt_light_gray"
                        android:layout_weight="2"/>

            </LinearLayout>

            <!--Address Line 1-->
            <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:weightSum="2">
                <EditText
                        android:id="@+id/edtAddressLineOne"
                        android:layout_width="0dp"
                        android:inputType="text"
                        android:layout_height="match_parent"
                        android:hint="Address Line 1"
                        android:textColor="@color/black"
                        android:paddingStart="8dp" android:background="@color/edt_light_gray"
                        android:layout_weight="2"/>

            </LinearLayout>


            <!--address line 2-->
            <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:weightSum="2">
                <EditText
                        android:id="@+id/edtAddressLinetwo"
                        android:layout_width="0dp"
                          android:inputType="text"
                          android:layout_height="match_parent"
                          android:hint="Address Line 2"
                          android:textColor="@color/black"
                          android:paddingStart="8dp" android:background="@color/edt_light_gray"
                          android:layout_weight="2"/>

            </LinearLayout>

            <!--city and country-->
            <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:weightSum="2">
                <TextView
                        android:id="@+id/tvCountry"
                        android:layout_width="0dp"
                        android:textColor="@color/black"
                          android:inputType="text"
                          android:paddingStart="8dp"
                          android:layout_height="match_parent"
                          android:hint="Country"
                          android:textSize="18sp"
                          android:gravity="center_vertical"
                          android:background="@color/edt_light_gray"
                          android:layout_weight="0.99"/>

                <View android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="0.02"/>
                <EditText
                        android:id="@+id/edtCity"
                        android:layout_width="0dp"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:hint="City"
                        android:textSize="18sp"
                        android:paddingStart="8dp" android:background="@color/edt_light_gray"
                        android:layout_weight=".99"/>
            </LinearLayout>

            <!--zip codee and body fat-->
            <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:weightSum="2">
                <EditText
                        android:id="@+id/edtZipcode"
                        android:layout_width="0dp"
                        android:inputType="number"
                        android:maxLength="6"
                        android:layout_height="match_parent"
                        android:hint="Zip Code"
                        android:textColor="@color/black"
                        android:paddingStart="8dp" android:background="@color/edt_light_gray"
                        android:layout_weight=".99"/>
                <View android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="0.02"/>
                <!--<EditText
                        android:id="@+id/edtBodyFat"
                        android:layout_width="0dp"
                          android:inputType="numberDecimal"
                          android:paddingStart="8dp"
                          android:layout_height="match_parent"
                          android:hint="Body Fat"
                        android:textColor="@color/black"
                        android:background="@color/edt_light_gray"
                          android:layout_weight="0.99"/>-->
                <Spinner
                    android:id="@+id/spinnerBodyFat"
                    android:layout_width="0dp"
                    android:inputType="text"
                    android:layout_height="match_parent"
                    android:hint="Gender"
                    android:textColor="@color/black"
                    android:paddingStart="8dp" android:background="@color/edt_light_gray"
                    android:layout_weight=".99"/>
            </LinearLayout>

            <!--weight and fat-->
            <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:weightSum="2">
                <EditText
                        android:id="@+id/edtWeight"
                        android:layout_width="0dp"
                        android:inputType="numberDecimal"
                        android:layout_height="match_parent"
                        android:hint="Weight (Kg)"
                        android:textColor="@color/black"
                        android:paddingStart="8dp"
                        android:background="@color/edt_light_gray"
                        android:layout_weight=".99"/>
                <View android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="0.02"/>
                <EditText
                        android:id="@+id/edtHeight"
                        android:layout_width="0dp"
                          android:inputType="numberDecimal"
                          android:paddingStart="8dp"
                          android:layout_height="match_parent"
                          android:hint="Height (cm)"
                        android:textColor="@color/black"
                        android:background="@color/edt_light_gray"
                          android:layout_weight="0.99"/>
            </LinearLayout>

            <!--Bio-->
            <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:background="@color/edt_light_gray"
            >
                <EditText
                        android:id="@+id/edtBio"
                        android:layout_width="match_parent"
                          android:inputType="text"
                          android:maxLines="3"
                          android:paddingTop="5dp"
                        android:textColor="@color/black"
                        android:layout_gravity="start|top"
                          android:background="@null"
                          android:layout_height="wrap_content"
                          android:hint="Bio"
                          android:paddingStart="8dp"
                />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>