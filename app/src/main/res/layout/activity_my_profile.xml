<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.navDrawer.activities.MyProfileActivity">
    <!--toolbar-->
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="48dp"
                 android:gravity="center"
                 android:background="@color/colorPrimary"
                 android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:text="My Profile"
                  android:textColor="@color/white"
                  android:textSize="20sp"/>
        <TextView
                android:id="@+id/tvContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="end"
                android:layout_gravity="end|center_vertical"
                android:text="Contact"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        <TextView
                android:id="@+id/tvBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="10dp"
                android:layout_gravity="start|center_vertical"
                android:text="Back"
                android:textColor="@color/white"
                android:textSize="18sp"/>
    </FrameLayout>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent"
        >
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="15dp"
                        android:src="@drawable/ic_user"
                        app:civ_border_color="#ffffff"
                        app:civ_border_width="6dp"/>

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Michel"
                    android:id="@+id/tvName"
                          android:textColor="@color/black"
                          android:textSize="18sp"
                          android:gravity="center"
                />

                <TextView android:layout_width="match_parent"
                          android:layout_marginTop="30dp"
                    android:id="@+id/tvBio"
                          android:layout_height="wrap_content"
                          android:text="Biology and not the test."
                          android:textColor="@color/black"
                          android:textSize="18sp"
                          android:gravity="center"
                />
                <Button
                        android:id="@+id/btnChnagePassword"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginStart="50dp"
                        android:text="Change Password"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:background="@drawable/roundedge_btn_primary_fill"
                        android:layout_marginEnd="50dp"
                        android:layout_marginTop="30dp"/>
                <Button
                        android:id="@+id/btnUpdateProfile"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginStart="50dp"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:text="Update Profile"
                        android:textColor="@color/white"

                        android:background="@drawable/roundedge_btn_primary_fill"
                        android:layout_marginEnd="50dp"
                        android:layout_marginTop="25dp"/>
            </LinearLayout>


            <LinearLayout
                    android:layout_marginTop="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:weightSum="2">
                <TextView
                        android:gravity="center"
                        android:id="@+id/tvFriends" android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:text="3 Friends"
                        android:background="@color/colorPrimary"
                        android:layout_weight=".99"/>
                <View android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="0.02"/>
                <TextView
                        android:id="@+id/tvFollower"
                        android:layout_width="0dp"
                          android:gravity="center"
                          android:textColor="@color/white"
                          android:text="1 Follower"
                          android:layout_height="match_parent"
                          android:background="@color/colorPrimary"
                          android:layout_weight="0.99"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:weightSum="2">
                <TextView
                        android:id="@+id/tvLike"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:text="21 Likes"
                        android:background="@color/colorPrimary"
                        android:layout_weight=".99"/>
                <View android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="0.02"/>
                <TextView
                        android:id="@+id/tvDislike"
                        android:layout_width="0dp"
                          android:gravity="center"
                          android:textColor="@color/white"
                          android:text="5 Dislikes"
                          android:layout_height="match_parent"
                          android:background="@color/colorPrimary"
                          android:layout_weight="0.99"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:weightSum="2">
                <TextView
                        android:id="@+id/tvCheckin"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:text="7 Check-in"
                        android:background="@color/colorPrimary"
                        android:layout_weight=".99"/>
                <View android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="0.02"/>
                <TextView android:layout_width="0dp"
                          android:gravity="center"
                    android:id="@+id/tvProfilePercent"
                          android:textColor="@color/white"
                          android:text="85.19% of profile"
                          android:layout_height="match_parent"
                          android:background="@color/colorPrimary"
                          android:layout_weight="0.99"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>