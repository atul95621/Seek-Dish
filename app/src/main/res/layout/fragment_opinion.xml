<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"

            tools:context=".ui.navDrawer.dishDescription.opinion.OpinionFragment">
        <TextView android:layout_width="match_parent"
                  android:id="@+id/tvOpinionHeader"
                  android:layout_height="wrap_content"
                  android:background="@color/light_gray"
                  android:textSize="18sp"
                  android:padding="2dp"
                  android:text="@string/opinion_1"/>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOpinionFrag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>

    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/tvOpinionAlert"
              android:visibility="gone"
              android:layout_height="wrap_content"
              android:fontFamily="@font/assistantregular"
              android:textColor="@color/black"
              android:gravity="center"
              android:layout_gravity="center"
              android:textSize="16sp"
              android:text="No Opinions Yet."
    />

</FrameLayout>